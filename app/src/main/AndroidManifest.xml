<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fhfl.js.skifahrt" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:supportsRtl="true"

        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />


                <action android:name="android.intent.ACTION_RECOGNIZE_SPEECH" />
                <action android:name="android.intent.LANGUAGE_MODEL_FREE_FORM"/>
                <action android:name="android.intent.EXTRA_PROMPT" />




            </intent-filter>
        </activity>
        <activity android:name=".level.LevelOneActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".level.LevelTwoActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".level.LevelThreeActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".level.LevelFourActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name="VoiceRecognitionActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
